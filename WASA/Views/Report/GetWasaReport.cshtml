        <th>SI</th>
        <th>Date</th>
        <th>Flow</th>
        <th>Level</th>
        <th>Runtime</th>
        <th>Stoptime</th>
        <th>KWH</th>
        <th>Production</th>
        <th>Production Cum</th>

        @foreach (WASA.Models.WasaReportModel D in Li)
        {
            <tr>

                <td>@D.Serial</td>

                <td>@D.Date</td>

                <td>@D.Flow</td>

                <td>@D.Level</td>

                <td>@D.Runtime</td>

                <td>@D.Stoptime</td>

                <td>@D.KWH</td>

                <td>@D.Production</td>

                <td>@D.ProductionCum</td>


            </tr>
        }

    </table>
}


